<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-chevron-right"></span> {{ name }}</h3>
    </div>
    <div class="panel-body">
        <div class="thumbnail">
            <img src="{{ name|lower|replace({' ': ''}) }}.jpg" alt="{{ name }}" />
        </div>
    </div>
    <div class="panel-footer">
        <span class="label label-{% if state == 'production' %}success{% elseif state == 'alpha' %}info{% elseif state == 'prototype' %}warning{% endif %}">
            <span class="glyphicon glyphicon-{% if state == 'production' %}flag{% elseif state == 'alpha' %}scissors{% elseif state == 'prototype' %}wrench{% endif %}"></span> {{ state }}
        </span>
        &nbsp;
        <a href="{{ url }}" target="_blank">{{ url }}</a>
    </div>
</div>
